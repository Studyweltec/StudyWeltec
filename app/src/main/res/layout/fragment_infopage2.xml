<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">




    <TextView
        android:layout_width="396dp"
        android:layout_height="wrap_content"
        android:text="Welcome to WelTec"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:id="@+id/info2_txt"
        android:layout_above="@+id/info2_img"/>

    <ImageView
        android:id="@+id/info2_img"
        android:layout_width="180dp"
        android:layout_height="200dp"
        android:background="@mipmap/weltec_logo"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="40dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_below="@+id/info2_img"
        android:layout_marginTop="120dp" >

        <Button
            android:id="@+id/info2_skip_btn"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="SKIP"
            android:textSize="10dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/main_color"
            android:backgroundTintMode="screen"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/info2_nxt_btn"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginLeft="120dp"
            android:text="NEXT"
            android:textSize="10dp"
            android:textStyle="bold"
            android:textColor="@color/main_color"
            android:backgroundTintMode="screen"/>

    </LinearLayout>

</RelativeLayout>
